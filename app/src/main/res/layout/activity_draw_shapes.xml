<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrawShapes">

    <EditText
        android:id="@+id/x_input"
        android:layout_width="146dp"
        android:layout_height="46dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="520dp"
        android:ems="10"
        android:hint="Enter radius/length"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/y_input"
        android:layout_width="146dp"
        android:layout_height="46dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="520dp"
        android:ems="10"
        android:hint="Enter Breadth"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/draw_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="601dp"
        android:text="Draw Circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/draw_rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginTop="600dp"
        android:text="Draw Rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/drawing"
        android:layout_width="135dp"
        android:layout_height="130dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="205dp"
        android:cropToPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/checkbox_off_background" />
</androidx.constraintlayout.widget.ConstraintLayout>